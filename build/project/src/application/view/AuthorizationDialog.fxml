<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root prefHeight="200.0" prefWidth="400.0" type="AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.AuthorizationDialogController">
   <children>
      <Label fx:id="labelLogin" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="22.0" prefWidth="170.0" text="Логін користувача:" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="220.0" AnchorPane.topAnchor="22.0" />
      <Label fx:id="labelPassword" alignment="CENTER_RIGHT" layoutX="10.0" layoutY="62.0" prefWidth="170.0" text="Пароль користувача:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="62.0" />
      <TextField fx:id="textLogin" layoutX="190.0" layoutY="20.0" prefWidth="200.0" promptText="Введіть свій логін" AnchorPane.leftAnchor="190.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0" />
      <PasswordField fx:id="textPassword" layoutX="190.0" layoutY="60.0" prefWidth="200.0" promptText="Введіть свій пароль" AnchorPane.leftAnchor="190.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="60.0" />
      <Hyperlink fx:id="linkRegistration" layoutX="190.0" layoutY="100.0" onAction="#linkRegistration" prefWidth="150.0" text="Реєстрація..." AnchorPane.leftAnchor="190.0" AnchorPane.topAnchor="100.0" />
      <Hyperlink fx:id="linkForgot" layoutX="190.0" layoutY="125.0" onAction="#linkForgot" prefWidth="150.0" text="Забули пароль..." AnchorPane.leftAnchor="190.0" AnchorPane.topAnchor="125.0" />
      <Button fx:id="okButton" defaultButton="true" layoutX="100.0" layoutY="165.0" mnemonicParsing="false" onAction="#okButton" prefWidth="80.0" text="ОК" AnchorPane.bottomAnchor="10.0" />
      <Button fx:id="cancelButton" cancelButton="true" layoutX="220.0" layoutY="165.0" mnemonicParsing="false" onAction="#cancelButton" prefWidth="80.0" text="Відмінити" AnchorPane.bottomAnchor="10.0" />
   </children>
</fx:root>
